# Deployment Configuration Template

# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git!

# Staging Environment
STAGING_FTP_SERVER=ftp.staging-server.com
STAGING_FTP_USERNAME=staging_user
STAGING_FTP_PASSWORD=your_staging_password
STAGING_FTP_PORT=21

# Production Environment
PROD_FTP_SERVER=ftp.production-server.com
PROD_FTP_USERNAME=prod_user
PROD_FTP_PASSWORD=your_production_password
PROD_FTP_PORT=21

# SSH Configuration (Alternative to FTP)
SSH_PRIVATE_KEY=your_private_key_here
REMOTE_HOST=your-server.com
REMOTE_USER=deploy_user
REMOTE_PATH=/var/www/html/wp-content/themes/docy/

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Database Backup (Optional)
DB_BACKUP_ENABLED=true
DB_BACKUP_PATH=/backups/
